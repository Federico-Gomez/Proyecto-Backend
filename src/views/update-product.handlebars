<div class="form-container">
    <h2 id="update-product">Editar Producto</h2>
    <form id="update-product-form" action="/api/products/{{productId}}" method="put">
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" class="input-field" required><br>

        <label for="description">Descripción:</label>
        <input type="text" id="description" name="description" class="input-field" required><br>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" class="input-field" required><br>

        <label for="thumbnails">Imágenes:</label>
        <input type="text" id="thumbnails" name="thumbnails" class="input-field" required><br>

        <label for="code">Código:</label>
        <input type="text" id="code" name="code" class="input-field" required><br>

        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" class="input-field" required><br>

        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" class="input-field" required><br>

        <button class="submit-btn" type="submit">Editar</button>
    </form>
</div>